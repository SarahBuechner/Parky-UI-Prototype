<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:text="Driver preferences"
        android:textSize="@android:dimen/app_icon_size"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textAlignment="center"
        android:layout_marginLeft="20dp"
        android:text="Type of lot(s) desired:"
        android:textSize="20dp"
        android:gravity="center_horizontal" />

    <CheckBox
        android:id="@+id/activity_driver_profile1_closedparking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:padding="10dp"
        android:layout_marginLeft="40dp"
        android:text="Closed parking"/>

    <CheckBox
        android:id="@+id/activity_driver_profile1_streetparking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:padding="10dp"
        android:layout_marginLeft="40dp"
        android:text="Street parking"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textAlignment="center"
        android:layout_marginLeft="20dp"
        android:text="Characteristics of desired lot(s):"
        android:textSize="20dp"
        android:gravity="center_horizontal" />

    <CheckBox
        android:id="@+id/activity_driver_profile1_citycenter"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="left"
        android:padding="10dp"
        android:layout_marginLeft="40dp"
        android:text="Close to city center"/>

    <CheckBox
        android:id="@+id/activity_driver_profile1_publictransport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:padding="10dp"
        android:layout_marginLeft="40dp"
        android:text="Close to public transport"/>

    <CheckBox
        android:id="@+id/activity_driver_profile1_noparktimelimit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:padding="10dp"
        android:layout_marginLeft="40dp"
        android:text="No limited park time"/>

    <CheckBox
        android:id="@+id/activity_driver_profile1_coveredparking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:padding="10dp"
        android:layout_marginLeft="40dp"
        android:text="Covered parking"/>

    <Button
        android:id="@+id/activity_driver_profile1_nextbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:text="Next"
        android:textSize="25dp" />

</LinearLayout>
